{
  "name": "third-brain",
  "version": "0.1.0",
  "type": "module",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "memory:index": "tsx src/memory/cli.ts index",
    "memory:search": "tsx src/memory/cli.ts search",
    "memory:status": "tsx src/memory/cli.ts status",
    "heartbeat": "tsx src/heartbeat/cli.ts",
    "skills:list": "tsx src/skills/cli.ts list",
    "skills:status": "tsx src/skills/cli.ts status",
    "dev:all": "concurrently -n api,web -c blue,green \"npm run dev:api\" \"npm run dev:dashboard\"",
    "dev:api": "tsx src/server/cli.ts",
    "dev:dashboard": "npm run dev --workspace apps/dashboard",
    "build:dashboard": "npm run build --workspace apps/dashboard",
    "start": "tsx src/server/cli.ts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@hono/node-server": "^1.13.8",
    "chokidar": "^4.0.3",
    "dotenv": "^16.4.7",
    "hono": "^4.7.4",
    "json5": "^2.2.3",
    "pg": "^8.13.1",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@types/node": "^22.12.0",
    "@types/pg": "^8.11.11",
    "concurrently": "^9.2.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^4.0.18"
  }
}
